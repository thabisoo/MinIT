@model MinIT.Common.ViewModels.MeetingType.MeetingTypeViewModel

<div class="card">
    <div class="card-header">Meeting Types</div>
    <div class="card-body">
        <button class="btn btn-info" data-toggle="modal" data-target="#myModal">
            New Meeting Type
        </button>

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var meetingType in Model.MeetingTypes)
                {
                    <tr>
                        <td>@meetingType.Name</td>
                    </tr>
                 }
            </tbody>
        </table>
    </div>
</div>

<div class="modal" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">Add Meeting Type</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form asp-controller="MeetingType" asp-action="AddMeetingType" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Meeting Type:</label>
                        <input asp-for="Name" type="text" class="form-control" id="name">
                        <span asp-validation-for="Name"></span>
                    </div>
                </div>


                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </form>

        </div>
    </div>
</div>